@model AppStock.Models.Article

@{
    ViewBag.Title = "Details";
}


<style>
    .dl-horizontal dt {
        text-align: left;
    }

    .table {
        width: 50%;
    }

        .table thead > tr > th, .table tbody > tr > th, .table tfoot > tr > th, .table thead > tr > td, .table tbody > tr > td, .table tfoot > tr > td {
            border-top: 0px solid #dddddd;
        }
</style>

<h3>Détails d'article</h3>
	
<div>
    <hr />

    <table class="table table-user-information">
        <tbody>
            <tr>
                <td><b>@Html.DisplayNameFor(model => model.reference)  </b></td>
                <td> @Html.DisplayFor(model => model.reference) </td>
            </tr>
            <tr>
                <td><b> @Html.DisplayNameFor(model => model.nom_article) </b></td>
                <td> @Html.DisplayFor(model => model.nom_article) </td>
            </tr>
            <tr>
                <td><b> @Html.DisplayNameFor(model => model.famille.nom_famille) </b></td>
